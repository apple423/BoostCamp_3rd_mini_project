<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.example.han.boostcamp3.MainActivity"
    android:background="#999999"
    >
    <android.support.v7.widget.CardView
        android:id="@+id/shop_title_cardView"
        android:layout_width="395dp"
        android:layout_height="70dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        >

        <EditText
            android:id="@+id/shop_title_EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:hint="@string/shop_title"
            android:textColor="@android:color/black"
            />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/shop_address_cardView"
        android:layout_width="395dp"
        android:layout_height="70dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/shop_title_cardView"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent">

        <EditText
        android:id="@+id/shop_address_EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="10dp"
        android:hint="@string/shop_address"
        android:textColor="@android:color/black"
        android:focusable="false"

            />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/shop_phone_cardView"
        android:layout_width="395dp"
        android:layout_height="70dp"

        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/shop_address_cardView">

        <EditText
            android:id="@+id/shop_phone_EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:hint="@string/shop_phone"
            android:textColor="@android:color/black" />

    </android.support.v7.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_length"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/shop_phone_cardView"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/shop_comment_cardView"
        android:layout_marginRight="8dp"
        app:layout_constraintVertical_bias="0.571"
        app:layout_constraintRight_toRightOf="parent" />

    <android.support.v7.widget.CardView
        android:id="@+id/shop_content_cardView"
        android:layout_width="395dp"
        android:layout_height="250dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/shop_phone_cardView"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent">

        <EditText
            android:id="@+id/shop_content_EditText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:hint="Hello World!"
            android:textColor="@android:color/black" />

    </android.support.v7.widget.CardView>



</android.support.constraint.ConstraintLayout>
